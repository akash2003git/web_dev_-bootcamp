<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Tweets</title>
  </head>
  <body>
    <h1>Tweets</h1>
    <ul>
      <% for (let t of tweets) { %>
        <li>
          <%=t.tweet%> - <b><%=t.username%></b> <a href="/<%=t.id%>">...</a>
        </li>
      <% } %>
    </ul>
    <a href="/new">New Tweet</a>
  </body>
</html>
